  <!-- sección quiénes somos -->
  <section class="w-full flex justify-center items-center relative z-10 mt-16">
    <div class="w-full max-w-6xl px-4">
      <div class="rounded-2xl shadow-xl p-8 md:p-12 flex flex-col md:flex-row items-center justify-between gap-8" style="background:rgba(24,130,156,0.92);backdrop-filter:blur(2px);">
